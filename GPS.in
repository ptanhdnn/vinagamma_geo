#/gps/source/intensity 1
#/gps/ene/type Mono
#/gps/ene/mono 1.33 MeV
#/gps/particle gamma
#/gps/ang/type iso

#/gps/source/add 1
# #/gps/verbose 2
#/gps/ene/type Mono
#/gps/ene/mono 1.17 MeV
#/gps/particle gamma
